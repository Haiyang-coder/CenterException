{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C/C++ Runner: Debug Session",
        "type": "cppdbg",
        "request": "launch",
        "args": [],
        "stopAtEntry": false,
        "externalConsole": false,
        "cwd": "${workspaceFolder}/src",
        "program": "${workspaceFolder}/ser",
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "preLaunchTask": "build====",
        
        "setupCommands": [
  
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
    
        ]
      }
    ]
  }